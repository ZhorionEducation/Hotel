@model Hotel.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<h1>Editar Reserva</h1>

<form asp-action="Edit" id="editForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <!-- Usuario -->
    <div class="form-group">
        <label asp-for="UsuarioId" class="control-label">Usuario</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <!-- Habitación -->
    <div class="form-group">
        <label asp-for="HabitacionId" class="control-label">Habitacion</label>
        <select asp-for="HabitacionId" class="form-control" asp-items="ViewBag.HabitacionId"></select>
        <span asp-validation-for="HabitacionId" class="text-danger"></span>
    </div>
    <!-- Fecha Inicio -->
    <div class="form-group">
        <label asp-for="FechaInicio" class="control-label">Fecha de inicio de la reserva</label>
        <input asp-for="FechaInicio" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    <!-- Fecha Fin -->
    <div class="form-group">
        <label asp-for="FechaFin" class="control-label">Fecha de fin de la reserva</label>
        <input asp-for="FechaFin" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>
    <!-- Precio Total -->
    <div class="form-group">
        <label asp-for="PrecioTotal" class="control-label">Total</label>
        <input asp-for="PrecioTotal" class="form-control" readonly/>  @*no es editable*@ 
        <span asp-validation-for="PrecioTotal" class="text-danger"></span>
    </div>
    <!-- Número de Acompañantes -->
    <div class="form-group">
        <label asp-for="NumeroAcompanantes" class="control-label">Acompañantes</label>
        <input asp-for="NumeroAcompanantes" class="form-control" />
        <span asp-validation-for="NumeroAcompanantes" class="text-danger"></span>
    </div>
    <!-- Fecha de Reserva -->
    <div class="form-group">
        <label asp-for="FechaReserva" class="control-label">Fecha en la cual se reservo</label>
        <input asp-for="FechaReserva" class="form-control" readonly/>
        <span asp-validation-for="FechaReserva" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Servicio Adicional</label>
        @foreach (var item in ViewBag.ServicioAdicionalId)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="Servicios" value="@item.Value" id="servicio_@item.Value">
                <label class="form-check-label" for="servicio_@item.Value">@item.Text</label>
            </div>
        }
    </div>
    <div class="form-group">
        <label class="control-label">Comodidad Adicional</label>
        @foreach (var item in ViewBag.ComodidadId)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="Comodidads" value="@item.Value" id="comodidad_@item.Value">
                <label class="form-check-label" for="comodidad_@item.Value">@item.Text</label>
            </div>
        }
    </div>
    <!-- Botones -->
    <div class="form-group d-flex">
        <button type="submit" class="btn btn-primary mr-2">
            <i class="iconify" data-icon="mdi:content-save" data-width="24" data-height="24"></i> 
        </button>
        <button type="button" class="btn btn-secondary" onclick="closeEditModal()">
            <i class="iconify" data-icon="mdi:close" data-width="24" data-height="24"></i> 
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}