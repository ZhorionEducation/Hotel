@model Hotel.Models.Habitacione

<div id="detailsContainer">
    <h4>Detalles de la Habitación</h4>
    <hr />
    <table class="table table-bordered" style="width:  100%;">
        <tr>
            <td style="width: 30%; font-weight: bold;">ID de Habitación:</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td style="width: 30%; font-weight: bold;">Número de Habitación:</td>
            <td>@Model.NumeroHabitacion</td>
        </tr>
        <tr>
            <td style="width: 30%; font-weight: bold;">Descripción:</td>
            <td>@Model.Descripcion</td>
        </tr>
        <tr>
            <td style="width: 30%; font-weight: bold;">Capacidad:</td>
            <td>@Model.Capacidad</td>
        </tr>
        <tr>
            <td style="width: 30%; font-weight: bold;">Precio por Noche:</td>
            <td>@Model.PrecioPorNoche.ToString("C")</td>
        </tr>
        <tr>
            <td style="width: 30%; font-weight: bold;">Imagen:</td>
            <td>
                @if (!string.IsNullOrEmpty(Model.Imagen))
                {
                    <img src="~/img/habitaciones/@Model.Imagen" alt="Imagen de la habitación" class="img-thumbnail" />
                }
            </td>
        </tr>
        <tr>
            <td style="width: 30%; font-weight: bold;">Estado:</td>
            <td>
                <div class="form-check form-switch switch-lg">
                    <input class="form-check-input" type="checkbox" id="switch-@Model.Id" @(Model.Activo ?? false ? "checked" : "") disabled>
                    <label class="form-check-label" for="switch-@Model.Id">@((Model.Activo ?? false) ? "Activo" : "Inactivo")</label>
                </div>
            </td>
        </tr>
    </table>
</div>
<div>
    <button type="button" class="btn btn-primary" id="buttonEdit" onclick="loadEditForm('@Model.Id')">
        <i class="iconify" data-icon="line-md:edit-twotone" data-width="24" data-height="24"></i> 
    </button>
    <button type="button" class="btn btn-secondary" onclick="closeDetailsModal()">
        <i class="iconify" data-icon="mdi:close" data-width="24" data-height="24"></i> 
    </button>
</div>

@section Scripts {
    <script src="~/js/scriptHabitaciones/indexHabitaciones.js"></script>
}